<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Edit Animal</title>
  </head>
  <body>
    <div class="wrapper">
      <% for (row in animal) { %>
        <form action="/mongooses/<%= animal[row].id %>" method="post">
          Animal: <input type="text" name="animal" value="<%= animal[row].animal %>">
          Pack Type: <input type="text" name="pack_type" value="<%= animal[row].pack_type %>">
          Number in Pack: <input type="text" name="in_pack" value="<%= animal[row].in_pack %>">
          <input type="submit" value="Edit Animal">
        </form>
      <% } %>
    </div>
  </body>
</html>
